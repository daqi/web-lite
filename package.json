{
  "name": "web-lite",
  "version": "1.0.0",
  "description": "Drizzle ORM + Hono + Valibot + Plop 完整示例项目",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "generate:validators": "tsx scripts/generate-validators.ts",
    "plop": "cross-env NODE_OPTIONS='--import tsx' plop --plopfile=plopfile.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "setup": "docker-compose up -d && sleep 3 && pnpm run db:push",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "hono",
    "drizzle",
    "valibot",
    "plop"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/valibot-validator": "^0.5.3",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/pluralize": "^0.0.33",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "change-case": "^5.4.4",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.31.6",
    "plop": "^4.0.4",
    "pluralize": "^8.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
